@model PortfolioProject.Pages.ProjectMentors.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h4>MENTORS</h4>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="2000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>

    </ol>

    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/MentoreeM1.png" alt="MentoreeM1" class="img-responsive" />
            <div class="carousel-caption M2heading" role="option">
                <p>
                    MENTORSHIPS BUILT ON FOSTERING RELATIONSHIPS.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/MentoreeM2.png" alt="MentoreeM2" class="img-responsive" />
            <div class="carousel-caption M2heading" role="option">
                <p>
                    RESEARCH POTENTIAL MENTORS.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/MentoreeM3.png" alt="MentoreeM3" class="img-responsive" />
            <div class="carousel-caption M2heading" role="option">
                <p>
                    SCHEDULE CONNECTIONS ATTEND EVENTS.

                </p>
            </div>
        </div>
    </div>
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">

        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        <hr />

    </div>
