@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (User.Identity.IsAuthenticated)
            {
                @if (Model.CurrentUser.AdminType == "Top-Admin")
                {
                    <div class="form-group">
                        <label asp-for="Input.AdminType"></label>
                        <select asp-for="Input.AdminType">
                            <option value="Admin">Regular Administrator</option>
                            <option value="Top-Admin">Top Administrator</option>
                            <option value="Mentoree">I am a Mentoree</option>
                            <option value="Mentors">I am a Mentor</option>
                        </select>
                        <span asp-validation-for="Input.AdminType" class=”text-danger”></span>
                    </div>

                }

              }

            <div class="form-group">
                <label asp-for="Input.AdminType"></label>
                <select asp-for="Input.AdminType">
                    <option value="Admin">Regular Administrator</option>
                    <option value="Top-Admin">Top Administrator</option>
                    <option value="Mentoree">I am a Mentoree</option>
                    <option value="Mentors">I am a Mentor</option>
                </select>
                <span asp-validation-for="Input.AdminType" class=”text-danger”></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FName"></label>
                <input asp-for="Input.FName" class="form-control" />
                <span asp-validation-for="Input.FName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LName"></label>
                <input asp-for="Input.LName" class="form-control" />
                <span asp-validation-for="Input.LName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}